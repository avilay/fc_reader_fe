<!DOCTYPE html>
<html>
<head>
  <title>Fringecup - simple feed reader</title>  
  <link rel="stylesheet" href="/css/fonts.css" type="text/css" />
  <link rel="stylesheet" href="/css/bootstrap.css" type="text/css" media="screen" />
  <link rel="stylesheet" href="/css/reader_fe.css" type="text/css" media="screen" />
</head>
<body>  
<div class="navbar navbar-default navbar-static-top">  
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Fringecup</a>
    </div> 
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= @home_active %>"><a href="/home">Home</a></li>
        <li class="<%= @reader_active %>"><a href="/feeds/items">Reader</a></li>        
        <li class="<%= @tools_active %>"><a href="#">Tools</a></li>
      </ul>
      <% if @user %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="text-primary"><%= @user.name %></span><b class="caret"></b>
          </a>        
          <ul class="dropdown-menu">
            <li><a href="/users/<%= @user.id %>">Account</a></li>
            <li><a href="/home">Logout</a></li>
          </ul>
        </li>
      </ul>
      <% end %>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">
  <h1><%= @page_heading %> </h1>
  
  <% if @errors && @errors.length > 0 %>
    <div id="page_errors" class="alert alert-danger alert-dismissable">
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
    </div>
  <% end %>

  <% if @warnings && @warnings.length > 0 %>
    <div id="page_warnings" class="alert alert-warning alert-dismissable">
    <% @warnings.each do |warning| %>
      <p><%= warning %></p>
    <% end %>
    </div>
  <% end %>

  <% if @infos && @infos.length > 0 %>
    <div id="page_warnings" class="alert alert-info alert-dismissable">
    <% @infos.each do |info| %>
      <p><%= info %></p>
    <% end %>
    </div>
  <% end %>

  <%= yield %>
</div>

<div class="container">
  <hr/>
  <footer>
    <ul id="footer">
      <li><a href="/home/about/">About</a></li>
      <li><a href="/home/contact/">Contact</a></li>
    </ul>
  </footer>
</div>


<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.js"></script>
<script src="/js/fringecup.js"></script>
</body>
</html>
